.container
    .enter-chat-options-wrapper#auth-wrapper
        .register-join-wrapper
            .new-topic-wrapper
                p: h3 Start new topic
                p: input#new-topic-nickname(type='text', placeholder='Enter your nickname')
                p: input#new-topic-name(type='text', placeholder='Enter topic name')
                button.btn#create-topic Create topic
            .join-by-invite-wrapper
                p: h3 Join topic by invite code
                p: input#invite-code(type='text', placeholder="Invite code")
                p: input#join-nickname(type='text', placeholder='Enter your nickname')
                button.btn#join-topic Join topic
        .topic-login-wrapper
            .join-login
                p: h3 Login into existing topic
                p: textarea#private-key(placeholder='Private key')
                p: button.btn#login-topic Login

    #you_online
        .user-name--wrap
            div
                span.user-name--greeting Hi,
                input.heading-name--input#user-name
            div.island-connection-status-wrap
                div#connection-status--connected
                    img(src="/img/online.png")
                    span.connected Connected to island
                div#connection-status--disconnected
                    img(src="/img/doNotDisturb.png")
                    span.disconnected Disconnected...
                    button.btn#re-connect re-connect

        .topic-name--wrap
            div.right-align
                span.topic-name--pre Topic:
            div
                input.heading-name--input#topic-name

    .chat-wrapper#chat_room
        .online_users
            h3.online-users-heading Other participants:
            #online-users-list
                .online-user-row
        .chat
            #chat_window
            .control-container
                .attach-file-wrap
                    #chosen-files
                    input#attach-file(type="file" name="file" class="inputfile")
                    label#attach-file-button(for="attach-file" )
                        img(src="/img/clip-128.png")
                .select-member-wrap
                    h4 To:
                    select#select-member(name="participant")
                        option(value="ALL") All
                .new-message-wrap
                    .input-wrap
                        .button-column
                            img#sounds-switch(src="/img/sound-on.png")
                        textarea#new-msg(placeholder='Enter your message')
                    .send-button-wrap
                        .hint-wrap
                            p.send-new-message-hint Enter - send. Ctrl+Enter - new line
                            p.send-new-message-hint __code - start block of code. __end - end block of code
                        button.btn.ld-ext-right#send-new-msg
                            | Send
                            .ld.ld-ring.ld-spin
    //MODAL DISPLAY
    #settings-view
        .settings-container
            .settings-menu#settings-menu
                a.settings-item.active#s-option-invites INVITES
                a.settings-item#s-option-participants PARTICIPANTS
                a.settings-item#s-option-settings CHAT SETTINGS
                a.settings-item#s-option-admin ADMIN TOOLS
            .settings-wrapper
                #invites-container
                    .invites-heading
                        h3 Pending invites
                    .invite-control
                        button.btn.ld-ext-right#refresh-invites
                            | SYNC
                            .ld.ld-ring.ld-spin
                        button.btn.ld-ext-right#new-invite
                            | NEW INVITE
                            .ld.ld-ring.ld-spin
                    .pending-invites#pending-invites
                        .invite-wrap
                            .invite-num
                            .invite-id 5fed63643a3b8357208614fe1e86887776101c43569779ba6ad9f8f9059f528c
                            .invite-del
                                button.invite-del-button Delete
                #participants-container
                    .participants-wrapper
                        .heading-wrapper

                            .ph-wrap
                                h5#participants--topic-name Topic: topic name

                        #participants-records
                            .participant-wrapper
                                .p-nickname Ivan
                                .p-rights 2
                                .p-actions
                                    .boot-participant Boot

                #chat-settings

                #admin-tools-container
                    .admin-login-link
                        a(target="_blank" rel="noopener noreferrer" href="/admin") Admin login

#code-view
    .code-view--content
        span#close-code-view.close &times;
        br
        #code--content
.modal-loader
script(src='/js/chat-page.js')


